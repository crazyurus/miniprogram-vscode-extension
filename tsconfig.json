{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "declaration": false,
    "removeComments": false,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "noImplicitAny": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "extensions",
    "dist"
  ],
  "ts-node": {
    "transpileOnly": true
  }
}